@model Final_Web_Project.InputModels.RecordEditInputModel
@using Final_Web_Project.ViewModels
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="bg-primary text-white font-weight-bold text-center p-3 w-60 mx-auto rounded">Edit Record</h1>
<form method="post" class="form rounded p-3 w-60 mx-auto mt-3" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly"></div>
    <div id="name-and-price-holder" class="d-flex justify-content-between">
        <div class="form-group mx-auto w-45">
            <div class="d-flex justify-content-center">
                <label asp-for="AlbumName" class="text-white h5">Album Name</label>
            </div>
            <input type="text"
                   class="form-control text-primary text-center"
                   id="albumName"
                   placeholder="AlbumName..."
                   value="@Model.AlbumName"
                   asp-for="AlbumName">
            <span asp-validation-for="AlbumName" class="text-danger"></span>
        </div>
        <div class="form-group mx-auto w-45">
            <div class="d-flex justify-content-center">
                <label asp-for="Price" class="text-white h5">Price</label>
            </div>
            <input type="number"
                   step="0.01"
                   class="form-control text-primary text-center"
                   id="price"
                   placeholder="Price..."
                   value="@Model.Price"
                   asp-for="Price">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>
    <div id="name-and-price-holder" class="d-flex justify-content-between">
        <div class="form-group mx-auto w-45">
            <div class="d-flex justify-content-center">
                <label asp-for="DateProduced" class="text-white h5">Date Produced</label>
            </div>
            <input type="text"
                   class="form-control text-primary text-center"
                   id="DateProduced"
                   placeholder="Date Produced..."
                   value="@Model.DateProduced"
                   asp-for="DateProduced">
            <span asp-validation-for="DateProduced" class="text-danger"></span>
        </div>
        <div class="form-group mx-auto w-45">
            <div class="d-flex justify-content-center">
                <label asp-for="Picture" class="text-white h5">Picture</label>
            </div>
            <input type="file"
                   class="form-control text-primary text-center"
                   id="picture"
                   placeholder="Picture..."
                   asp-for="Picture">
            <span asp-validation-for="Picture" class="text-danger"></span>
        </div>
    </div>
    <div id="date-and-picture-holder" class="d-flex justify-content-between">
        <div class="form-group mx-auto w-45">
            <div class="d-flex justify-content-center">
                <label asp-for="Artist" class="text-white h5">Artist</label>
            </div>
            <input type="text"
                   class="form-control text-primary text-center"
                   id="artist"
                   placeholder="Artist..."
                   value="@Model.Artist"
                   asp-for="Artist">
            <span asp-validation-for="Artist" class="text-danger"></span>
        </div>
        <div class="form-group mx-auto w-45">
            <div class="d-flex justify-content-center">
                <label asp-for="Quantity" class="text-white h5">Quantity</label>
            </div>
            <input type="number"
                   step="1"
                   class="form-control text-primary text-center"
                   id="quantity"
                   placeholder="Quantity..."
                   value="@Model.Quantity"
                   asp-for="Quantity">
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
    </div>
    <hr class="hr-2 bg-primary mt-4">
    <div class="form-group mx-auto w-45">
        <div class="d-flex justify-content-center">
            <label asp-for="Genre" class="text-white h5">Genre</label>
        </div>
        <select class="form-control text-primary" id="type" asp-for="Genre">
            <option selected disabled>--- Select Genre ---</option>
            @foreach (var type in (IEnumerable<GenreCreateViewModel>)this.ViewData["types"])
            {
                @if (type.Name == Model.Genre)
                {
                    <option value="@type.Name" selected>@type.Name</option>
                }
                else
                {
                    <option value="@type.Name">@type.Name</option>

                }
            }
        </select>
        <span asp-validation-for="Genre" class="text-danger"></span>
    </div>
    <div class="form-group mx-auto w-45">
        <div class="d-flex justify-content-center">
            <label asp-for="Description" class="text-white h5">Description</label>
        </div>
        <textarea rows="10" cols="50"
                  id="description"
                  placeholder="Description..."
                  asp-for="Description">
        </textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <hr class="hr-2 bg-primary mt-4">
    <div class="d-flex justify-content-center mt-3">
        <button class="btn btn-primary font-weight-bold">Edit Record</button>
    </div>
</form>

<script>
    window.onload = () => {
        $('#DateProduced').datetimepicker({
            format: 'Y-m-d H:i',
            lang: 'en'
        });
    };
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
