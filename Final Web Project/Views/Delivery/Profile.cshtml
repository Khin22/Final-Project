@model List<Final_Web_Project.ViewModels.Delivery.DeliveryDetailsViewModel>

@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-center text-white">My Deliveries</h3>
<hr class="hr-2 bg-primary w-50">
@if (Model.Count == 0)
{
    <h3 class="text-center text-white">You have no deliveries generated yet.</h3>
    <hr class="hr-2 bg-primary">
}
else
{
    <table class="table table-hover">
        <thead>
            <tr class="row text-white text-center font-weight-bold">
                <th class="col-md-4 h4">Id</th>
                <th class="col-md-2 h4">Issued On</th>
                <th class="col-md-2 h4">Issued For</th>
                <th class="col-md-1 h4">Phone Number</th>
                <th class="col-md-3 h4">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var delivery in Model)
            {
                <tr class="row text-white text-center">
                    <td class="col-md-4 h5">@delivery.Id</td>
                    <td class="col-md-2 h5">@delivery.IssuedOn.ToString("dd/MM/yyyy HH:mm")</td>
                    <td class="col-md-2 h5">@delivery.TwoNames</td>
                    <td class="col-md-1 h5">@delivery.PhoneNumber</td>
                    <td class="col-md-3">
                        <a href="/Delivery/Details/@delivery.Id" class="btn btn-primary font-weight-bold">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
